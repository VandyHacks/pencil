{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "$": false,
        "angular": false,
        "moment": false,
        "showdown": false,
        "swal": false,
        "sweetAlert": false
    },
    "rules": {
        "prefer-const": ["error", {
            "destructuring": "all",
            "ignoreReadBeforeAssign": true
        }],
        "prefer-arrow-callback": "error",
        "no-var": "error",
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"]
    }
}
